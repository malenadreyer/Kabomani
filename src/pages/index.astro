---
import Menu from "../Menu.astro"
import Footer from "../layout/Footer.astro"
---
<header>
    <Menu/>
</header>

<main>

    <video id="background-video" autoplay muted loop playsinline >
        <source src="/video_forside.mp4" type="video/mp4">
    </video>

    <div class="cont_udforsk">
        <h2>Ny hos Kabomani?</h2>
        <p>Udforsk cirkulær shopping</p>
        <a href="">Læs mere her</a>
    </div>


   <h2>Medarbejdernes favoritter</h2> 


      <div class="container">
