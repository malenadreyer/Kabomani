    .green-button {
    background-color: #849500;
    color: white;
    border: none;
    padding: 15px 30px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 5px;
}

.green-button:hover {
    background-color: #6e7a00;
}

main {
    background-color: #FFFAF5;
}

.cont_udforsk {
    background-color: #F3ECD9 ;
    color: #262521;
    padding-top: 5px;
    padding-bottom: 20px;
    padding-left: 10px;

}

.cont_udforsk p {

}

.cont_udforsk a::after {
            content: '→'; /* Unicode character for right arrow */
            margin-left: 8px;
            font-size: 16px;
        }

.carousel-box {
      display: flex;
            justify-content: center;
            align-items: center;
}
  .carousel-container {
            width: 96%;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .carousel {
            display: flex;
            width: calc(100% * 12 / 4); /* Adjust the width based on the number of items */
            animation: scroll 15s linear infinite;
        }

        .carousel-item {
            min-width: calc(100% / 12);
            box-sizing: border-box;
        }

        .carousel-item img {
            width: 100%;
            display: block;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-66.67%);
            }
        }
.container {
     display: flex;
            justify-content: center;
            align-items: center;
            margin: 10%
}


