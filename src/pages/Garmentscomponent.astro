---
import Garment from "./garment.astro";


const {data} = Astro.props;

---

<div class="garments">
<div class="article">
    <article>
<div>
    <a href={`garment/${data.id}`}>
    <div class="billede1">
        <img src={data.billede} alt="billede">
    </div>
    </a><div class="container">
            <div class="heart" id="heart" onclick="skiftBillede()"></div>
        </div>
    <a href={`garment/${data.id}`} class="article1">
        <div class="overskrift">
        <h3>{data.overskrift}</h3>
    </div>
            <div class="tekst">
                <h4><span class="normal-text">{data.price} DKK</span></h4>
            </div>
            <div class="tekst" >
                <h4>St√∏rrelse: <span class="normal-text">{data.size}</span></h4>
            </div>
        </a>
        </article>
    </div>

</div>


<style>
    img {
        width: 100%;
    }
    .garments {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
    }
    .article {
        text-decoration: none;
        color: black;
        background-color: rgba(243, 236, 217, 0.40);
        width: 360px;
        margin-bottom: 120px;
    }
    .article1 {
        text-decoration: none;
        color: black;
    }
    .billede1{
        margin: 30px;
    }
    .overskrift {
        margin-left: 30px;
        opacity: 50%;
    }
    .tekst {
        margin-left: 30px;
    }
    .container {
        display: grid;
        grid-template-columns: 1fr auto;
        margin-left: 83%;
    }
    .heart {
    width: 29px;
    height: 22px;
    background-image: url('/public/vectors/heart.svg');
    background-size: cover;
    cursor: pointer;
    }
    .heart:hover, .heart.clicked {
        background-image: url('/public/vectors/heart-fill.svg');
    }
    
</style>
