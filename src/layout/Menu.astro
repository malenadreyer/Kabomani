---
import Garments from "../pages/Garmentscomponent.astro";
---

<header class="header">
    <div class="mobile-menu">
        <div class="mobile-header">
            <div class="burger" onclick="openNav()">&#9776;</div>
            <div class="logo"><img src="/vectors/Logo - mobil.svg" alt=""></div>
            <div class="image-icon"> <img src="/public/vectors/kurv.svg" alt=""></div>
        </div>
        <div id="sideNav" class="side-nav">
            <a href="javascript:void(0)" class="close-btn" onclick="closeNav()">&times;</a>
            <a href="/garments">Tøj</a>
            <a href="#">Sko</a>
            <a href="#">Tasker</a>
            <a href="#">Acc</a>
        </div>
    </div>

    <!-- Web Menu -->
    <div class="web-menu">
        <div class="web-header">
            <input type="text" class="search-bar" placeholder="Søg...">
            <div class="logo"><img src="/vectors/Logo_web.svg" alt=""></div>
            <div class="header-buttons">
                <button class="how-to-sell">How to sell</button>
                <div class="icon-group">
                    <div class="person-icon"> <img src="/public/vectors/Profil knap.svg" alt=""></div>
                    <div class="divider"></div>
                    <div class="cart-icon"> <img src="/public/vectors/kurv.svg" alt=""></div>
                </div>
            </div>
        </div>
        <div class="web-nav">
            <a href="/src/pages/garments.astro">Tøj</a>
            <button>Sko</button>
            <button>Tasker</button>
            <button>Acc</button>
        </div>
    </div>
    <script>
        function openNav() {
        document.getElementById("sideNav").style.width = "250px";
    }
    
    function closeNav() {
        document.getElementById("sideNav").style.width = "0";
    }
    
    </script>
</header>

<style>
    /* Common styles */
.header {
  background:  #FFFAF5;
}

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.logo img{
    justify-content: center;
align-items: center;
}

/* Mobile Menu Styles */
.mobile-menu {
    display: none;
}

.mobile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    color: white;
}

.burger {
    font-size: 30px;
    cursor: pointer;
    color: rgba(81, 60, 34, 1);
}

.image-icon {
    font-size: 24px;
}

.side-nav {
    height: 100%;
    width: 0;
    position: fixed;
    top: 0;
    left: 0;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.side-nav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.side-nav a:hover {
    color: #f1f1f1;
}

.side-nav .close-btn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

/* Web Menu Styles */
.web-menu {
    display: block;
}

.web-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    color: white;
}

.search-bar {
    width: 340px;
    padding: 5px;
}

.header-buttons {
    display: flex;
    align-items: center;
}

.how-to-sell {
    margin-right: 10px;
}

.icon-group {
    display: flex;
    align-items: center;
}

.icon-group .divider {
    width: 2px;
    height: 30px;
    background-color: rgba(81, 60, 34, 1);
    margin: 0 10px;
}

.web-nav {
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background-color: FFFAF5;
    align-items: flex-start;
}

.web-nav button {
    background-color: #FFFAF5;
    color: rgba(0, 0, 0, 1);
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    
}

.web-nav button:hover {
    
}

/* Media Queries */
@media screen and (max-width: 768px) {
    .mobile-menu {
        display: block;
    }
    
    .web-menu {
        display: none;
    }
}

</style>

